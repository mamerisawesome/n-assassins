{
  "scripts": {
    "watch": "watchify js/app.js js/helpers/* -o js/bundle.js -v",
    "build": "browserify js/app.js js/helpers/* -o js/bundle.js",
    "server": "lite-server",
    "start": "npm run build && concurrently --kill-others \"npm run watch\" \"npm run server\""
  },
  "dependencies": {
    "concurrently": "^3.4.0",
    "lite-server": "^2.3.0",
    "watchify": "^3.9.0"
  }
}
